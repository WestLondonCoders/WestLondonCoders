.a-page-holder
  .u-margin-top--desktop

  = form_for @role do |f|
    .m-post-editor
      = f.text_field :name, placeholder: 'Role name'
      .u-center

    .u-margin-top
      .m-post-editor__submit
        .u-float-right
          = link_to "Cancel", admin_path, class: 'a-button a-button--ghost u-right'
          = f.submit 'Save', class: 'a-button u-right'
