.a-page-holder
  %section.a-section.a-section--alt
    .a-content--xwide.a-content--tight

      %h1.u-center Organisers

    .a-content
      %p= I18n.t('index_introductions.organisers')

      .u-center.u-margin-bottom.u-margin-top--small
        - if current_user && current_user.organiser_interests.empty?
          = button_to organiser_interests_path(current_user), { method: :post, class: 'a-button' } do
            I'm interested!


  %section.a-section
    .a-content--xwide
      .m-user-cards
        - @organisers.each do |user|
          .m-user-card
            .m-user-card__avatar
              = link_to image_tag(avatar_url(user)), user

            %h2.a-paint-border-bottom{class: ("a-paint-border-bottom--#{user.primary_languages&.first&.id}")}= link_to user.name, user
            %h3= user.tagline
            = render partial: 'users/social_links', locals: { user: user }

            %section.a-section
              .a-content
                - if user.primary_languages.any?
                  .a-tags.a-tags--center
                    - user.primary_languages.each do |language|
                      = link_to language do
                        %h2.a-tag{class: "a-paint-background--#{language.id}"}= language.name
