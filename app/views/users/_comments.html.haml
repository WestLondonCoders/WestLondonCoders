%section.a-section
  .a-content
    .m-comments
      %h2
        Comments by
        = user.name
        %i.fa.fa-comment-o

      %ul.m-comments__feed#comments-list
        - comments.each do |comment|
          %div.u-margin-bottom{id: "comment-#{comment.id}"}
            %li.m-comment
              = render partial: 'shared/user_tag', locals: { user: user, with_date: true, date: comment.created_at }

            .m-comment__content.u-margin-bottom--small
              = comment.body
              - unless comment.replies.published.empty?
                .u-float-right= pluralize(comment.replies.published.size, 'reply')

            .u-margin-bottom--small
              On the
              = link_to comment.commentable.title, comment.commentable
              = comment.commentable_type.downcase
