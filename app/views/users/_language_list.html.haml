- if @user.languages.any? || @user.primary_languages.any?
  %section.a-section
    .a-content
      - if @user.primary_languages.any?
        %h2
          Primarily using:
          - if @user.primary_languages.any?
            .a-tags
              - @user.primary_languages.each do |language|
                = link_to language do
                  %h2.a-tag{style: "background-color: #{language.colour}"}= language.name

      - if @user.languages.any?
        %h2
          Also using:
          - if @user.languages.any?
            .a-tags
              - @user.languages.each do |language|
                = link_to language do
                  %h2.a-tag{style: "background-color: #{language.colour}"}= language.name
