- if @user.languages.any? || @user.primary_languages.any?
  %section.a-section
    .a-content
      - if @user.primary_languages.any?
        %h1
          Primary languages I'm using
          - if can? :edit, @user
            %a.m-profile__pencil{href: edit_user_path(@user)}
              %i.a-icon-after-text.fa.fa-pencil
          - if @user.primary_languages.any?
            .a-tags
              - @user.primary_languages.each do |language|
                = link_to language do
                  %h2.a-tag{class: "a-paint-background--#{language.id}"}= language.name

      - if @user.languages.any?
        %h1
          Secondary languages I'm using
          - if can? :edit, @user
            %a.m-profile__pencil{href: edit_user_path(@user)}
              %i.a-icon-after-text.fa.fa-pencil
          - if @user.languages.any?
            .a-tags
              - @user.languages.each do |language|
                = link_to language do
                  %h2.a-tag{class: "a-paint-background--#{language.id}"}= language.name
