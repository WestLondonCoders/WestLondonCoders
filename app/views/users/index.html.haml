- set_page_title("Members")

.a-page-holder

  %section.a-section.a-section--separated
    .a-content--xwide.a-content--tight

      %h1.a-heading.u-center#user-search-heading= render 'heading'

      .a-content
        %p
          Profiles help us find people with shared interests, and sort ourselves by
          = link_to 'languages', languages_path
          we're into and
          = link_to 'hackrooms', hackrooms_path
          we're part of.

        = render partial: 'filter'

  %section.a-section.a-section--alt
    .a-content--xwide#user-search-results= render 'results'
