.m-user-card
  = link_to organisers_path do
    = image_tag asset_path("logo.svg"), class: 'a-organiser' if user.has_role?(:organiser)
  .m-user-card__avatar
    = link_to image_tag(avatar_url(user)), user

  %h2{style: "border-bottom: solid 2px #{user.colour}"}= link_to user.name, user
  %h3= user.tagline
  = render partial: 'users/social_links', locals: { user: user }

  %section.a-section
    .a-content
      - if user.primary_languages.any?
        .a-tags.a-tags--center
          - user.primary_languages.take(4).each do |language|
            = link_to language do
              %h2.a-tag{style: "background-color: #{language.colour}"}= language.name
