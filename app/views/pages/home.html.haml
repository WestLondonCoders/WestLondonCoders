%head
  %meta{:content => "summary_large_image", :name => "twitter:card"}
  %meta{:content => "@westlondoncode", :name => "twitter:site"}
  %meta{:content => "@westlondoncode", :name => "twitter:creator"}
  %meta{:content => "Learn, discuss and practice code at West London Coders", :name => "twitter:title"}
