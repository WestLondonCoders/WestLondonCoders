- set_page_title("Learn, discuss and practice code")

.m-hero--video
  = video_tag "video/gdg.mov", controls: false, autoplay: true, muted: true, loop: true, id: 'home-vid'
  %h1#next-meetup-banner Learn, discuss and practice code.

%section.a-section.a-section--separated
  .a-content--wide
    .m-intro
      %h1.a-heading--large
        Join
        %span#next-meetup-count 20
        others at our next meetup
      %h2
        %span#next-meetup-date
        %span#next-meetup-venue-name
      %h3
        %span#next-meetup-venue
      = render partial: 'meetups/rsvp_button', locals: { meetup: @next_meetup } if @next_meetup

- if @sponsors.any?
  %section.a-section.m-intro
    %h3 Our partners
    .m-intro__logos.u-margin-bottom
      - @sponsors.each do |sponsor|
        .m-intro__logo[sponsor]= link_to image_tag(sponsor.logo_url), sponsor

%section.a-section.a-section--img-block

%section.a-section
  .a-content--xwide
    %h1.a-heading.u-center Latest comments
    .u-margin-top= render partial: 'shared/comments_grid', locals: { comments: @comments.top_level.published.take(6) }

%section.a-section
  .a-content--xwide
    %h1.a-heading.u-center From the blog
    = render partial: 'shared/posts', locals: { posts: @posts.take(4) }


.m-hero--home

:javascript
  var videoHero = document.getElementById('home-vid');
  videoHero.muted = "muted";
