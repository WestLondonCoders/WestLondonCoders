%ul.m-comments__feed
  - @comments.published.take(14).each do |comment|
    %li.m-comment.m-comment--delete
      = render partial: 'shared/user_tag', locals: { user: comment.author, with_date: true, date: comment.created_at }

    .m-comment__content
      = simple_format(truncate(comment.body, length: 250, escape: false, omission: '...', separator: '.'))
