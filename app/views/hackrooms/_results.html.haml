.m-grid
  - @hackrooms.each do |hackroom|
    .m-grid__box
      %h1= link_to hackroom.name, hackroom_path(hackroom), style: "border-bottom: solid 2px #{hackroom.primary_languages&.first&.colour}"

      = excerpt(hackroom.mission)

      - if hackroom.primary_languages.any?
        .a-tags
          - hackroom.primary_languages.each do |language|
            = link_to language.name, language, class: "a-tag", style: "background-color: #{language.colour}"

      - if hackroom.owners.any?
        %h3= pluralize(hackroom.owners.count, "Maintainer")
        .a-identities
          - hackroom.owners.take(4).each do |user|
            = render partial: 'shared/user_tag', locals: { user: user }

      - if hackroom.users.any?
        %h3= pluralize(hackroom.users.count, "Member")
        .a-identities
          - hackroom.users.take(10).each do |user|
            = render partial: 'shared/user_tag', locals: { user: user }
      .m-grid__bottom
        = link_to "View", hackroom, class: 'a-button a-button--elastic'
