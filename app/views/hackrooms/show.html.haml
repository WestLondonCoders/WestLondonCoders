- set_page_title(@hackroom.name)

.u-margin-top--desktop

- if current_user.is_hackroom_admin?(@hackroom) || user_is_admin
  .centered
    = link_to "Edit hackroom", edit_hackroom_path(@hackroom), class: "a-button a-button--edit"

.m-hackroom
  %section.a-section
    .a-content
      .m-hackroom__links.u-float-right
        = link_to "https://westlondoncoders.slack.com/archives/#{@hackroom.slack}", target: "_blank" do
          %i.fa.fa-slack

      %h1.a-heading.centered
        = @hackroom.name

      .m-hackroom__mission
        = sanitize(@hackroom.mission)

      .a-content
        - if @hackroom.languages.any?
          %h2 Languages
          .m-hackroom__members
            - @hackroom.languages.each do |language|
              = render partial: 'shared/language_tag', locals: { language: language }

      .a-content
        - if @hackroom.owners.any?
          %h2 Admins
          .m-hackroom__members
            - @hackroom.owners.each do |user|
              = render partial: 'user_tag', locals: { user: user }

      .a-content
        - if @hackroom.users.any?
          %h2 Members
          .m-hackroom__members
            - @hackroom.users.each do |user|
              = render partial: 'user_tag', locals: { user: user }

      .u-margin-top.u-float-right
        - if user_in_hackroom?(@hackroom, current_user)
          = link_to 'Leave hackroom', leave_hackroom_path, class: 'a-button'
        - else
          = link_to 'Join hackroom', join_hackroom_path, class: 'a-button'
