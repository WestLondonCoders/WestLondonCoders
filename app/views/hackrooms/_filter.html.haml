.m-user-list__search.js-filter-form.m-user-list__search--fixed
  = search_form_for @search, url: search_hackrooms_path, method: :post, remote: true do |f|
    .m-user-list__search-item
      = f.search_field :name_cont, placeholder: 'Search by name'

.m-user-list__search.js-filter-form.m-user-list__search--fixed
  = search_form_for @search, url: search_hackrooms_path, method: :post, remote: true do |f|
    .m-form__checkboxes
      - @languages.each do |language|
        .m-form__checkbox
          = check_box_tag 'q[primary_languages_id_eq_any][]', language.id
          = language.name
    = f.submit "Search", class: 'a-button'
