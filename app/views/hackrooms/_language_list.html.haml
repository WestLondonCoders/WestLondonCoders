.a-content
  %h2 Tools and languages
  %h3 Primary
  - if hackroom.primary_languages.any?
    .a-tags
      - hackroom.primary_languages.each do |language|
        = render partial: 'shared/language_tag', locals: { language: language }
  - else
    None added yet.
  - if hackroom.languages.any?
    %h3 Secondary
    .a-tags
      - hackroom.languages.each do |language|
        = render partial: 'shared/language_tag', locals: { language: language }
  - else
    None added yet.
