- set_page_title("Editing hackroom")

.u-margin-top--desktop

.m-post-editor
  = form_for @hackroom do |f|
    .m-post-editor__title
      %h1= f.text_field :name, placeholder: 'Name'

    %section.a-section
      .a-content
        %h2 Links
        .m-profile__links
          .m-profile__links--field
            %i.fa.fa-slack
            = f.text_field :slack, placeholder: '#slack-overflow'
            %i.fa.fa-link
            = f.text_field :project_url, placeholder: 'website.com'

    %section.a-section
      .a-content
        %h2 Mission
        = f.trix_editor :mission, placeholder: "What are you building?"

    %section.a-section
      .a-content.m-hackroom__languages
        %h2 Languages you're using
        = f.select :language_ids, language_options_for_select(Language.all, f.object.language_ids), { label: 'Languages', include_blank: true }, multiple: true

    %section.a-section
      .a-content.m-hackroom__admins
        %h2 Admins
        = f.select :owner_ids, user_options_for_select(User.all, f.object.owner_ids), { label: 'Admins', include_blank: true }, multiple: true

    .u-float-right
      = link_to "Cancel", hackrooms_path, class: 'a-button a-button--ghost u-left'
      = f.submit 'Save changes', class: 'a-button'
