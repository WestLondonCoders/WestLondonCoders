- set_page_title("Editing hackroom")

.u-margin-top--desktop

.m-post-editor
  = form_for @hackroom do |f|
    .m-post-editor__title
      %h1= f.text_field :name, placeholder: 'Name'

    %section.a-section
      .a-content
        %h2 Links
        .m-profile__links
          .m-profile__links--field
            %i.fa.fa-slack
            = f.text_field :slack, placeholder: '#slack-overflow'
            %i.fa.fa-link
            = f.text_field :project_url, placeholder: 'website.com'

    %section.a-section
      .a-content
        %h2 Mission
        = f.trix_editor :mission, placeholder: "What are you building?"

    %section.a-section
      .a-content.m-hackroom__languages
        %h2 Languages you're using
        %h3 Primary languages
        %p Choose the languages and tools that are the main point of your hackroom.

        .m-form__checkboxes
          = f.collection_check_boxes :primary_language_ids, Language.all, :id, :name do |b|
            .m-form__checkbox
              = b.check_box
              = b.label

        %h3 Others used
        %p List any other languages also used.
        .m-form__checkboxes
          = f.collection_check_boxes :language_ids, Language.all, :id, :name do |b|
            .m-form__checkbox
              = b.check_box
              = b.label

    %section.a-section
      .a-content.m-hackroom__admins
        %h2 Maintainers
        = f.select :owner_ids, user_options_for_select(User.all, f.object.owner_ids), { label: 'Maintainers' }, multiple: true

    %section.a-section
      .a-content.m-hackroom__admins
        %h2 Members
        = f.select :user_ids, user_options_for_select(User.all, f.object.user_ids), { label: 'Members' }, multiple: true

    .u-margin-top
      .m-post-editor__submit
        = link_to "Delete hackroom", @hackroom, method: :delete, data: { confirm: 'Delete hackroom?' }, class: 'a-button a-button--ghost' if user_is_admin
        .u-float-right
          - if current_page?('/hackrooms/new')
            = link_to "Cancel", hackrooms_path, class: 'a-button a-button--ghost u-right'
          - else
            = link_to "Cancel", hackroom_path(@hackroom), class: 'a-button a-button--ghost u-right'
          = f.submit 'Save', class: 'a-button u-right'
