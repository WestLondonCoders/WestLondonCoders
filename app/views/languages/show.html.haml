- set_page_title(@language.name)

.a-page-holder

  - if current_user && current_user.has_role?(:admin)
    %section.a-section.u-margin-top--mobile
      .a-content.u-center
        = link_to "Edit language", edit_language_path(@language), class: "a-button a-button--edit"

  %section.a-section
    .a-content
      %h1.u-center{ style: "border-bottom: solid 2px #{@language.colour}"}= @language.name

      = render partial: 'highlights', locals: { language: @language }

  %section.a-section
    .a-content
      = sanitize @language.description

  %section.a-section
    .a-content
      - if @language.primary_users.any?
        %h2
          = @language.name
          fans
        .a-identities
          - @language.primary_users.each do |user|
            = render partial: 'shared/user_tag', locals: { user: user }

      - if @language.users.any?
        %h2 Casual users
        .a-identities
          - @language.users.each do |user|
            = render partial: 'shared/user_tag', locals: { user: user }

  %section.a-section
    .a-content--wide
      %h2.u-center Hackrooms
      = render partial: 'shared/hackroom_cards', locals: { hackrooms: @language.primary_hackrooms }
