- set_page_title("Languages")

- if user_is_admin
  %section.a-section.u-margin-top
    .a-content.u-center
      = link_to "Add language", new_language_path, class: 'a-button a-button--edit'

%section.a-section
  .a-content

    = render partial: 'shared/people_tabs'

    %h1.u-center
      #language-search-heading
        = render 'heading'

    = render partial: 'filter'
    = render partial: 'sort'

    #language-search-results
      = render 'results'
