.m-user-list__search.js-filter-form
  = search_form_for @search, url: search_posts_path, method: :post, remote: true do |f|
    .m-user-list__search-item
      = f.search_field :title_and_content_cont, placeholder: 'Content'
    .m-user-list__search-item
      = f.search_field :created_by_name_cont, placeholder: 'Author'
    .m-user-list__search-item
    = f.submit "Search", class: 'a-button u-hide-on-desktop'
