.m-user-cards
  - source.each do |user|
    .m-user-card
      .m-user-card__avatar
        = link_to image_tag(avatar_url(user)), user
      %h2.m-languages__language--default{class: ("m-languages__language--#{user.primary_languages.first.id}" if user.primary_languages.any?)}= link_to user.name, user
      %h3= user.tagline
      = render partial: 'users/social_links', locals: { user: user }

      %section.a-section
        .a-content
          - if user.primary_languages.any?
            .a-tags.a-tags--center
              - user.primary_languages.each do |language|
                = link_to language do
                  %h2.a-tag{class: "a-tag--#{language.id}"}= language.name
