.m-grid
  - hackrooms.each do |hackroom|
    .m-grid__box
      .m-grid__banner{style: "background-color: #{hackroom.primary_languages.first.colour}"}
        %h1.a-headline= link_to hackroom.name, hackroom
      .m-grid__box-content
        = image_tag(language_avatar_url(hackroom.primary_languages.first), class: 'a-avatar a-avatar--small', style: "border: solid 2px #{hackroom.primary_languages.first.colour}")

        = render partial: 'hackrooms/highlights', locals: { hackroom: hackroom }

        = excerpt(hackroom.mission) if hackroom.mission

        .u-margin-top--small.u-right
          = link_to "See more", hackroom, class: 'a-button'
