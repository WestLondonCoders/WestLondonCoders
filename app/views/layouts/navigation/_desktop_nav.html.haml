.m-navbar--desktop
  .m-navbar
    %h1.m-navbar__logo
      %a{href: root_path}
        %img{src: asset_path("logo.svg")}
        West London Coders
    .m-navbar__nav
      %h2.m-navbar__item{class: ('m-navbar__item--is-selected' if current_page?(users_path))}
        %a{href: users_path}
          %i.fa.fa-user-circle-o{"aria-hidden" => "true"}
          People
      %h2.m-navbar__item{class: ('m-navbar__item--is-selected' if current_page?(languages_path))}
        %a{href: languages_path}
          %i.fa.fa-laptop{"aria-hidden" => "true"}
          Languages
      %h2.m-navbar__item{class: ('m-navbar__item--is-selected' if current_page?(hackrooms_path))}
        %a{href: hackrooms_path}
          %i.fa.fa-wrench{"aria-hidden" => "true"}
          Hackrooms
      %h2.m-navbar__item{class: ('m-navbar__item--is-selected' if current_page?(posts_path))}
        %a{href: posts_path}
          %i.fa.fa-commenting-o{"aria-hidden" => "true"}
          Posts
      %h2.m-navbar__item{class: ('m-navbar__item--is-selected' if current_page?(meetups_path))}
        %a{href: meetups_path}
          %i.fa.fa-meetup{"aria-hidden" => "true"}
          Meetups

    - if current_user
      = render partial: 'layouts/navigation/user_nav', locals: {logged_in: true}
    - else
      = render partial: 'layouts/navigation/user_nav', locals: {logged_in: false}
