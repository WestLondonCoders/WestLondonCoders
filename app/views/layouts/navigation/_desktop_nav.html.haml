.m-navbar--desktop
  .m-navbar
    %h1.m-navbar__logo
      %a{href: root_path}
        %img{src: asset_path("logo.svg")}
        West London Coders
    .m-navbar__nav
      %ul#m-dropdown
        %li.m-dropdown.m-dropdown--hover.js-menu
          %h2
            %a{href: '#'}
            %i.fa.fa-user-circle-o{"aria-hidden" => "true"}
            Members
          %ul.m-dropdown__submenu.m-dropdown__submenu--members.js-submenu
            %li
              = link_to users_path do
                %i.fa.fa-user-circle-o
                People
            %li
              = link_to interests_path do
                %i.fa.fa-soccer-ball-o
                Interests
            %li
              %a{href: skills_path}
                %i.fa.fa-code{"aria-hidden" => "true"}
                Skills
      %h2
        %a{href: posts_path}
          %i.fa.fa-newspaper-o{"aria-hidden" => "true"}
          Blog
      %h2
        %a{href: learn_path}
          %i.fa.fa-graduation-cap{"aria-hidden" => "true"}
          Learn
    - if current_user
      = render partial: 'layouts/navigation/user_nav', locals: {logged_in: true}
    - else
      = render partial: 'layouts/navigation/user_nav', locals: {logged_in: false}
