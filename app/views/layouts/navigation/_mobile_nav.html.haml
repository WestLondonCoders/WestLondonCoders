.m-navbar--mobile
  .m-navbar
    .m-navbar--mobile-left
      %ul#m-dropdown
        %li.m-dropdown.m-dropdown--hover.js-menu
          %img{src: asset_path("logo.svg"), class: 'm-dropdown__trigger'}
          %ul.m-dropdown__submenu.m-dropdown__submenu--left.js-submenu
            %li
              %a{href: root_path}
                %i.fa.fa-home{"aria-hidden" => "true"}
                Home
            %li
              %a{href: users_path}
                %i.fa.fa-user-circle-o{"aria-hidden" => "true"}
                People
            %li
              %a{href: languages_path}
                %i.fa.fa-keyboard-o{"aria-hidden" => "true"}
                Languages
            %li
              %a{href: hackrooms_path}
                %i.fa.fa-wrench{"aria-hidden" => "true"}
                Hackrooms
            %li
              %a{href: posts_path}
                %i.fa.fa-commenting-o{"aria-hidden" => "true"}
                Blog
            %li
              %a{href: events_path}
                %i.fa.fa-group{"aria-hidden" => "true"}
                Meetups

    .m-navbar--mobile-right
      - if current_user
        = render partial: 'layouts/navigation/user_nav', locals: {logged_in: true}
      - else
        = render partial: 'layouts/navigation/user_nav', locals: {logged_in: false}
