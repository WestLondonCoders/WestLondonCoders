- set_page_title("Meetups")

.a-page-holder

  %section.a-section.a-section--alt
    .a-content--wide.a-content--tight
      %h1.a-heading.u-center
        #post-search-heading
          = render 'heading'

      .a-content
        %p= I18n.t('index_introductions.events')

      = render partial: 'filter'
      = render partial: 'sort'

  - if can? :create, Event
    %section.a-section.u-margin-top--mobile
      .a-content.u-center
        = link_to "Schedule meetup", new_admin_event_path, class: 'a-button a-button--edit'

  %section.a-section
    #event-search-results
      = render 'results'

      .u-center.u-margin-top
        = link_to "Past meetups", past_events_path, class: 'a-button'
