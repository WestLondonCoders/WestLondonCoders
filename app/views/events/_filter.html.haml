.m-user-list__search.js-filter-form.m-user-list__search--fixed
  = search_form_for @search, url: search_events_path, method: :post, remote: true do |f|
    .m-user-list__search-item
      = f.search_field :name_cont, placeholder: 'Search'
    = f.submit "Search", class: 'a-button u-hide-on-desktop'
