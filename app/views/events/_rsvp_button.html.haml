- event = event || @event

- if current_user && !event.date.past?
  - if user_attending_event?(event, current_user)
    = link_to 'Cancel your RSVP', rsvp_event_path(event), class: 'a-button'
  - else
    = link_to 'RSVP', rsvp_event_path(event), class: 'a-button'
- elsif !event.date.past?
  = link_to 'RSVP', new_user_session_path, class: 'a-button'
- else
  = link_to 'See more', event, class: 'a-button'
