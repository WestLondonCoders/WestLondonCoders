- set_page_title("New event")

.a-page-holder

  .m-post-editor
    %h1 New event

    = form_for [:admin, @event] do |f|
      .m-post-editor__title
        %h1= f.text_field :name, placeholder: "Learn, discuss and practice code"
      .m-post-editor__content
        = f.trix_editor :description

      .m-post-editor__content
        = f.datetime_local_field :date

      .m-form__checkboxes
        = f.collection_check_boxes :venue_ids, Sponsor.all, :id, :name do |b|
          .m-form__checkbox
            = b.check_box
            = b.label

      .u-margin-top
        .m-post-editor__submit
          - if @event.persisted?
            = link_to "Delete event", [:admin, @event], method: :delete, data: { confirm: 'Delete event?' }, class: 'a-button a-button--ghost u-left'
            = link_to "Cancel", admin_events_path, class: 'a-button a-button--ghost u-left'
            = f.submit 'Save changes', class: 'a-button u-float-right'

          - else
            = link_to "Cancel", admin_events_path, class: 'a-button a-button--ghost'
            = f.submit 'Schedule', class: 'a-button'
