.m-user-list__search.js-filter-form
  = search_form_for @search, url: search_skills_path, method: :post, remote: true do |f|
    .m-user-list__search-item
      = f.search_field :name_cont, placeholder: 'Skill'
    .m-user-list__search-item
      = f.search_field :users_name_cont, placeholder: 'Person'
    .m-user-list__search-item
    = f.submit "Search", class: 'a-button u-hide-on-desktop'
